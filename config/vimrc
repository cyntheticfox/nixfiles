" This file will need to be renamed to ".vimrc" before use

" Disable vi support
set nocompatible

" Allow line delete
set backspace=indent,eol,start

" Set Editor information
set number
syntax on
set cursorline
set ruler
set showcmd
set nostartofline
set laststatus=2
set mouse=a

" Set Tab information
set autoindent
set expandtab
set softtabstop=4
set shiftwidth=4

" Set Search Options
set incsearch
set hlsearch
set ignorecase
set smartcase

" Set Color scheme
colorscheme industry

set history=2000

" Improve command-line completion
set wildmenu

" Add column ruler
set colorcolumn=80

